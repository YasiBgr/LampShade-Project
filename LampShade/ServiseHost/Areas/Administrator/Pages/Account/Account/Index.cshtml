@page
@using AccountManagement.Configuration.Permission
@model Areas.Administrator.Pages.Account.Account.IndexModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت کاربران";
}
<link href="~/Administrator/assets/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

<div permission="@AccountPermission.CreateAccount" class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Create")">ایجاد کاربر جدید</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در کاربران</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Fullname"></label>
                        <input class="form-control" asp-for="SearchModel.Fullname" placeholder="نام ">
                    </div> 
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Username"></label>
                        <input class="form-control" asp-for="SearchModel.Username" placeholder="نام کاربری">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Mobail"></label>
                        <input class="form-control" asp-for="SearchModel.Mobail" placeholder="موبایل">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.RollId"></label>
                        <select class="form-control" asp-for="SearchModel.RollId" asp-items="Model.Role">

                            <option value="0">نقش کاربر را انتخاب کنید</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div  permission="@AccountPermission.ListAccount" class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست کاربران(@Model.Accounts.Count)</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>عکس</th>
                                    <th>نام</th>
                                    <th>نام کاربری</th>
                                    <th>موبایل</th>
                                    <th>نقش</th>
                                    <th>تاریخ تولید</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Accounts)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>
                                            <img src="~/ProductPicture/@item.ProfilePhoto" style="width: 70px; height: 70px" />
                                        </td>
                                        <td>@item.Fullname</td>
                                        <td>@item.Username</td>
                                        
                                        <td>@item.Mobail</td>
                                       
                                        <td>@item.Roll</td>
                                        <td>@item.CreationDate</td>
                                        <td>
                                            <a permission="@AccountPermission.EditAccount" class="btn btn-warning btn-rounded waves-effect waves-light m-b-5"
                                               href="#showmodal=@Url.Page("./Index", "Edit", new { id = item.Id})">
                                                <i class="fa fa-edit"></i> ویرایش
                                            </a>

                                            <a  permission="@AccountPermission.ChangePassword" class="btn btn-info btn-rounded waves-effect waves-light m-b-5"
                                                href="#showmodal=@Url.Page("./Index", "ChangePassword", new { id = item.Id})">
                                                <i class="fa fa-key"></i> ویرایش رمز عبور
                                            </a>
                                            
                                            <a  permission="@AccountPermission.ChangePassword" class="btn btn-danger btn-rounded waves-effect waves-light m-b-5"
                                                href="#showmodal=@Url.Page("./Index", "DeleteAccount", new { id = item.Id})">
                                                <i class="fa fa-remove"></i> حذف کاربر
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Administrator/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Administrator/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}