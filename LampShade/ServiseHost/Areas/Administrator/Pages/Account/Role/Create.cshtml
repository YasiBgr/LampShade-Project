@page
@model Areas.Administrator.Pages.Account.Role.CreateModel
@{ }
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">ایجاد نقش جدید</h3>
            </div>
            <div class="panel-body">

                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <form method="post">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="command.Name" class="control-label">نقش</label>
                                        <input type="text" class="form-control" asp-for="command.Name">
                                        <span asp-validation-for="command.Name" class="error"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="modal-footer">
                                <a asp-page="./Index" class="btn btn-dark waves-effect waves-light">بازگشت</a>

                                <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>